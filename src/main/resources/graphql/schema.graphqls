type User {
    id: ID!
    name: String!
    email: String!
}

type Post {
    id: ID!
    slug: String!
    title: String!
    description: String!
    author: User!
    comments: [Comment!]
}

type Comment {
    id: ID!
    content: String!
}

type Query {
    users: [User!]
    posts: [Post!]
    comments: [Comment!]
    user(id: ID!): User
}